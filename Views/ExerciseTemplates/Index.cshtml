@model List<FlexWise_Prototype.Entities.ExerciseTemplate>

@{
    var showError =
        (TempData["ErrorMessage"] is string errorMsg && !string.IsNullOrEmpty(errorMsg))
        && !(Model?.Any() ?? false);   // only if there are still zero exercises
}

@if (showError)
{
    <div class="alert alert-warning">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Exercises</h1>

<a class="btn btn-primary" asp-action="Create">Create New Exercise</a>

<table class="table mt-3">
    <thead>
    <tr>
        <th>Name</th>
        <th>Muscle Group</th>
        <th>Equipment</th>
        <th>@*Action*@</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Name</td>
            <td>@e.TargetMuscleGroup</td>
            <td>@e.EquipmentType</td>
            <td>
                <form asp-controller="ExerciseTemplates"
                      asp-action="Delete"
                      method="post"
                      style="display:inline">
                    <input type="hidden" name="id" value="@e.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>